<style is:global>
#tbg {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    z-index: -1;
    filter: blur(1.2px);
}

</style>
<svg id="tbg">
    <defs>
        <symbol id="cross">
            <line x1="0" y1="0" x2="10" y2="10" stroke="#313244" />
            <line x1="10" y1="0" x2="0" y2="10" stroke="#313244" />
        </symbol>
        <symbol id="triangle">
            <path d="M0 0 L5 10 L10 0 Z" fill="none" stroke="#313244" />
        </symbol>
    </defs>
</svg>
<script>
let state = 2;
let prng = (limit: number) => {
    state = (1103515245 * state + 12345) % 2**31;
    return state % limit;
};
const tbg = document.getElementById("tbg")!;
let content = tbg.innerHTML;
for (let i = 0; i < 100; i++) {
    content += `<use href="#${["cross", "triangle"][prng(3)%2]}" x="${prng(window.innerWidth)}" y="${prng(window.innerHeight)}" />`;
}
tbg.innerHTML = content;
</script>
