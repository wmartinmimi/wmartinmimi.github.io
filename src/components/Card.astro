---
const { heading } = Astro.props;
---

<style is:global>
div.card {
    background-color: #00000030;
    border-radius: 5px;
    backdrop-filter: blur(5px);
    box-shadow: 0 0 15px #00000030 inset;

    padding: 20px;
    margin: 20px;
}

div.card>hr {
    border-top: 3px dashed #f1d151;
    width: min(400px, 100%);
    margin-top: 5px;
    margin-bottom: 20px;
}
</style>

<div class="card">
    <h2>{heading}</h2>
    <hr />
    <slot />
</div>
