---
const { title, description, link } = Astro.props;
---

<style>
    .card {
        border-style: solid;
        border-width: 3px;
        border-color: #f1d151;
        padding: 20px;
        border-radius: 5px;
    }

    div.card:hover h3 {
        text-decoration: underline;
    }

    a, a:visited {
        color: #e8e8ea;
        display: inline-block;
        text-decoration: none;
        margin: 20px;

        vertical-align: top;
    }

    a:visited div h3{
        color: #a3978b;
    }

    div.card p {
        color: #a3978b;
    }

    @media (min-width: 840px) {
        a {
            width: 40%;
        }
    }
</style>

<a href={link}>
    <div class="card">
        <h3>{title}</h3>
        <p>{description}</p>
    </div>
</a>
